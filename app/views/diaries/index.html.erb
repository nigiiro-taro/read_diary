<p id="notice"><%= notice %></p>

<h1>Diaries</h1>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Genre</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @diaries.each do |diary| %>
        <tr>
          <td><%= diary.title %></td>
          <td><%= diary.content %></td>
          <td><%= diary.genre %></td>
          <td><%= diary.score %></td>
          <td><%= link_to 'Show', diary %></td>
          <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
          <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



